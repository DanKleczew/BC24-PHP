{% extends 'pro/distributeur/index.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h1>Vente</h1>
        <p>Scannez le code du produit vendu</p>
        <br>

        {{ form_start(form) }}
        <label> Tag NFC :
            <input type="number" name="{{ field_name(form.id) }}" class="form-control" >
        </label>

            <button class="btn btn-primary" disabled>Scanner</button>
            <button class="btn btn-primary" type="submit">Vente</button>

        {{ form_end(form) }}


        <br><br>

        <h2>Historique des ventes</h2>
        {% for resource in resources %}
            <div class="card">
                <div class="card-body">
                    <p class="card-text">Vente du produit {{ resource.ResourceName.name }} ( {{ resource.id }} ) </p>
                </div>
                <br>
                <div class="card-footer">
                    <a class="card-link" href="{{ path('app_search_result', {'id' :  resource.id }) }}"> Rechercher ce produit </a>
                </div>
            </div>
                <br>
        {% endfor %}
    </div>
{% endblock %}
