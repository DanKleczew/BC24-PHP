{% extends 'pro/eleveur/index.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h1>Informations sur votre animal :</h1>
        <br>
        <ul class="list-group">
            <li class="list-group-item">NFC : {{ animal.id }}</li>
            <li class="list-group-item">Nom : {{ animal.resourceName.name }}</li>
            <li class="list-group-item">Genre : {{ animal.Genre }}</li>
            <li class="list-group-item">Origine : {{ animal.origin.ProductionSiteName }} | Adresse : {{ animal.origin.Address }} | Téléphone : {{ animal.origin.ProductionSiteTel }}</li>
            <li class="list-group-item">Date et heure de naissance : {{ animal.date|date('d/m/Y') }}, {{ animal.date|date('H:i:s') }}</li>
            <li class="list-group-item">Poids en grammes : {{ animal.weight }}</li>
        </ul>
        <br>
        <h2>Actions possibles :</h2>
        <a href="{{ path('app_eleveur_weight', {'id' : animal.id}) }}"> <button class="btn btn-primary">Peser</button> </a>
        <a href="{{ path('app_eleveur_vaccine', {'id' : animal.id }) }}"><button class="btn btn-primary">Vacciner</button></a>
        <a href="{{ path('app_eleveur_disease', {'id' : animal.id }) }}"><button class="btn btn-primary">Signaler une maladie</button></a>
        <a href="{{ path('app_eleveur_nutrition', {'id' : animal.id }) }}"><button class="btn btn-primary">Signaler un changement de Nutrition</button></a>

        <br><br>
        <a href="{{ path('app_eleveur_list') }}"><button class="btn btn-primary">Retour à la liste</button></a>
    </div>


{% endblock %}
