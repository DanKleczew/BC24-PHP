{% extends 'admin/admin.html.twig' %}

{% block body %}
<div class="container-fluid">
    {% if state == "success" %}
        <h1>Success ! </h1> <br>
        <a href="{{ path('app_admin_index') }}">Retour à la vue Admin</a>

    {% else %}
        <h1>Création d'une nouvelle ressource</h1><br>
        {{ form_start(form) }}
        {{ form_row(form.id,  {
            label: 'Tag NFC'
        }) }}

        <label> Nom de la nouvelle ressource :
            <select name="{{ field_name(form.ResourceName) }}" class="form-control">
                {% for name, id in field_choices(form.ResourceName) %}
                    <option value="{{ id }}">{{ name }}</option>
                {% endfor %}
            </select>
        </label>
        <br>
        <label> ID du propriétaire actuel de la ressource :
            <select name="{{ field_name(form.currentOwner) }}" class="form-control">
                {% for name, id in field_choices(form.currentOwner) %}
                    <option value="{{ id }}">{{ name }}</option>
                {% endfor %}
            </select>
        </label>


        {{ form_row(form.isFinalProduct, {
            label: 'Est un produit fini'
        }) }}

        {{ form_row(form.isContamined, {
            label: 'Est dangereux'
        }) }}

        {{ form_row(form.weight, {
            label: 'Poids en grammes'
        })
        }}
       {{ form_row(form.price, {
            label: 'Prix en euros'
        })
        }}
        {{ form_row(form.description, {
            label: 'Description'
        })
        }}
        <label> NFC des Composants :
            {% for i in 0..5 %}
            <input class="ml-3" type="number" name="{{ field_name(form.components) }}">
            {% endfor %}

        </label>

        <br>

        <label> Lieu d'origine :
            <select name="{{ field_name(form.origin) }}" class="form-control">
                {% for name, id in field_choices(form.origin) %}
                    <option value="{{ id }}">{{ name }}</option>
                {% endfor %}
            </select>
        </label>

        <br><br>
        {{ form_end(form) }}

    {% endif %}
</div>
{% endblock %}
