{% extends 'admin/admin.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <h1>Modifier une ressource : </h1><br>
        {{ form_start(form, {'attr': {'class': 'search-form'}}) }}
        {{ form_widget(form.id, {'attr': {'class': 'search-input', 'placeholder': 'Recherchez par Tag NFC'}}) }}<br>
        <button disabled class="btn btn-primary">Scanner</button>
        <button type="submit" class="btn btn-primary">Rechercher</button>
        {{ form_end(form) }}
        <br>
        <div class="row ml-5" >
            {% for resource in resources %}

            <div class="card mr-2 mb-2" style="width: 18rem;">
                <div class="card-body ">
                    <h5 class="card-title">{{ resource.ResourceName.name }}</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">{{ resource.id }}</h6>
                    <a href="{{ path('app_admin_modifySpecific', {'id': resource.id}) }}" class="card-link">Modifier cette ressource</a>
                </div>
            </div>

            {% endfor %}
        </div>

    </div>
{% endblock %}
